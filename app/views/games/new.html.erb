<%= simple_form_for @game, :html=> { class: 'form-group' } do |f| %>
  <div class="form-group">
    <%= f.input :date_played, input_html: {class: 'datepicker'}, :label => "Date played: " %> 
    <%= f.input :player_1_id, input_html: {:value => current_user.id}, :as => :hidden %>
    <%= f.input :player_2_id, :collection => @opponents_available, :label => "Opponent", :label_method => :email, :value_method => :id, :include_blank => false %>  
    <%= f.input :player_1_score, :label => "Your score: " %>
    <%= f.input :player_2_score, :label => "Opponent score: " %>
    <%= f.submit "Save", :class => 'btn btn-success' %>
  </div>
<% end %>
